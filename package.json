{
  "name": "check-in",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "homepage": "https://github.com/xg4/check-in#readme",
  "bugs": {
    "url": "https://github.com/xg4/check-in/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xg4/check-in.git"
  },
  "license": "MIT",
  "author": "xg4 <xingor4@gmail.com>",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "clean": "rimraf ./dist",
    "dev": "nodemon --watch src --ext ts --exec npm run serve",
    "lint": "eslint src/**/* --fix",
    "pretty": "prettier --write src/**/*",
    "serve": "ts-node --files --transpile-only",
    "serve:acfun": "npm run serve -- ./src/tasks/acfun",
    "serve:bilibili": "npm run serve -- ./src/tasks/bilibili",
    "serve:music163": "npm run serve -- ./src/tasks/music163",
    "serve:v2ex": "npm run serve -- ./src/tasks/v2ex",
    "prestart": "npm run build",
    "start": "pm2 start ./dist/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{json,md,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@xg4/dingtalk-bot": "^0.0.3",
    "cookie": "^0.4.0",
    "dayjs": "^1.8.20",
    "dotenv": "^8.2.0",
    "puppeteer": "^2.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/cookie": "^0.3.3",
    "@types/node": "^13.7.1",
    "@types/puppeteer": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.2",
    "lint-staged": "^10.0.7",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  }
}
