generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  username String    @unique
  email    String?   @unique
  password String
  accounts Account[]

  @@map("users")
}

model Task {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  name        String            @unique
  description String?
  domain      String
  accounts    TasksOnAccounts[]
  records     Record[]

  @@index([name])
  @@map("tasks")
}

model TasksOnAccounts {
  account   Account  @relation(fields: [accountId], references: [id])
  accountId Int      @map("account_id")
  task      Task     @relation(fields: [taskId], references: [id])
  taskId    Int      @map("task_id")
  createdAt DateTime @default(now()) @map("assigned_at")

  @@id([accountId, taskId])
}

model Account {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  name         String
  description  String?
  cookie       String
  cookieHash   String            @unique @map("cookie_hash")
  latestCookie String?           @map("latest_cookie")
  tasks        TasksOnAccounts[]
  author       User              @relation(fields: [authorId], references: [id])
  authorId     Int               @map("author_id")
  records      Record[]

  @@index([authorId])
  @@map("accounts")
}

model Record {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  message   String
  status    Int
  accountId Int     @map("account_id")
  account   Account @relation(fields: [accountId], references: [id])
  task      Task    @relation(fields: [taskId], references: [id])
  taskId    Int     @map("task_id")

  @@index([accountId])
  @@map("records")
}
